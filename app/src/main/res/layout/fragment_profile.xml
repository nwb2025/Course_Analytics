<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:padding="16dp"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/image_course"
        android:layout_width="138dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile" />
    <TextView
        android:id="@+id/profile_name_tv"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_course"
        android:text="Math Analytics"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/profile_name_tv2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name_tv"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="6m7hcyphe5@privaterelay.dcdscdcapp.."/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_below="@id/image_course"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/profile2" />




</RelativeLayout>